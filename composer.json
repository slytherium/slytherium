{
    "name": "zapheus/zapheus",
    "description": "An independent and framework-friendly PHP micro-framework.",
    "keywords": ["php framework", "php library", "zapheus"],
    "homepage": "https://github.com/zapheus/zapheus",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "https://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Zapheus\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zapheus\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}