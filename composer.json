{
    "name": "slytherium/slytherium",
    "description": "Yet another simple and extensible micro-framework for PHP.",
    "keywords": ["php framework", "php library", "slytherium"],
    "homepage": "https://github.com/slytherium/slytherium",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "https://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Slytherium\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slytherium\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}