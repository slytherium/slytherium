{
    "name": "zapheus/zapheus",
    "description": "An independent and framework-friendly PHP micro-framework.",
    "keywords": ["interoperable", "micro-framework", "php library", "zapheus"],
    "homepage": "https://zapheus.github.io/",
    "license": "MIT",
    "authors":
    [
        {
            "email": "rougingutib@gmail.com",
            "homepage": "https://roug.in/",
            "name": "Rougin Gutib",
            "role": "Software Engineer"
        }
    ],
    "require":
    {
        "php": ">=5.3.0"
    },
    "require-dev":
    {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.1.0"
    },
    "autoload":
    {
        "psr-4":
        {
            "Zapheus\\": "src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Zapheus\\": "tests"
        }
    },
    "scripts":
    {
        "test": "phpunit"
    },
    "extra":
    {
        "branch-alias":
        {
            "dev-master": "1.0-dev"
        }
    }
}